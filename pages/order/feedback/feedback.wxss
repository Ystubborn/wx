.item-content {
  background-color: #fff;
  margin-bottom: 25rpx;
  float: left;
  padding-bottom: 25rpx;
  width: 100%;
}

.item-content .title-content {
  height: 40rpx;
  padding: 30rpx;
  width: 710rpx;
}

.item-content .title-content .title-info {
  border-left: 3px solid #3696ed;
  padding: 0 20rpx;
  line-height: 45rpx;
  font-size: 17px;
  float: left;
}

.item-content .fun-bar {
  border-top: 1px solid #f1f1f1;
  float: left;
  width: 730rpx;
  padding: 20rpx 10rpx 0;
}

.item-content .fun-bar .fun-left {
  width: 28%;
  height: 88rpx;
  float: left;
  text-align: left;
  padding-left: 10rpx;
}

.item-content .fun-bar .fun-left text {
  color: #d22f1c;
  vertical-align: middle;
  height: 70rpx;
  line-height: 70rpx;
}

.item-content .fun-bar .fun-center {
  width: 62%;
  float: left;
  line-height: 70rpx;
}

.item-content .fun-bar .fun-center input {
  height: 70rpx;
  padding-left: 10rpx;
  text-align: right;
}

.item-content .fun-bar .fun-center .picker {
  padding-left: 10rpx;
  text-align: right;
}

.item-content .fun-bar .fun-center .select {
  border: 1px solid #dcdada;
  border-radius: 10rpx;
  float: left;
  width: 25%;
  margin-left: 20rpx;
  text-align: right;
}

.item-content .fun-bar .fun-center input {
  text-align: right;
}

.item-content .fun-bar .fun-right {
  width: 8%;
  float: right;
  line-height: 70rpx;
  font-size: 20px;
}

.item-content .fun-top {
  line-height: 90rpx;
  border-bottom: 1px solid #f1f1f1;
  padding-left: 10rpx;
}

.item-content .fun-top  text {
  color: #d22f1c;
  vertical-align: middle;
  height: 70rpx;
  line-height: 70rpx;
}

.item-content .fun-bottom {
  padding: 20rpx;
}

.item-content .fun-bottom textarea {
  width: 710rpx;
  height: 90px;
}

.btn-content {
  position: fixed;
  bottom: 30px;
  left: 20px;
  right: 20px;
}


.item-content .img-list {
  clear: both;
  padding: 0 20rpx;
  background-color: #fff;
}

.item-content .img-list .img-item {
  width: 155rpx;
  height: 155rpx;
  margin-right: 20rpx;
  float: left;
  position: relative;
  margin-bottom: 20rpx;
}

.item-content .img-list .img-item .addImage {
  width: 100%;
  height: 100%;
}

.item-content .img-list .img-item .image {
  width: 100%;
  height: 100%;
  border: 1px solid #eee;
  border-radius: 3px;
}

.item-content .img-list .img-item .close {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: -7px;
  right: -7px;
}


.mask {
  z-index: 1000;
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
}

.maskContent {
  padding: 10rpx 20rpx 40rpx;
  width: 80%;
  background: #fff;
  margin: 30% auto;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  z-index: 1001
}

.maskContent .title {
  line-height: 100rpx;
  font-size: 17px;
  border-bottom: 1px solid #f1f1f1;
  text-align: center;
}

.maskContent .title .ruleHide {
  font-size: 18px;
  float: right;
}

.maskContent .center {
  display: flex;
  flex-direction: column;
}

.maskContent .center .first {
  margin-top: 20rpx;
  line-height: 60rpx;
  text-align: center;
}

.maskContent .center .second {
  line-height: 80rpx;
  text-align: center;
  font-size: 28px;
  margin-bottom: 40rpx;
}

.maskContent .center .thrid {
  margin-bottom: 30rpx;
  line-height: 60px;
  padding: 0 20rpx;
  border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
  background-color: #fff;
}

.maskContent .center .thrid:active {
  background-color: #f1f1f1;
}

.maskContent .center .thrid icon {
  float: right;
  font-size: 20px;
}

.maskContent .center .thrid .wx {
  width: 44rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.maskContent .center .thrid .account {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}

.maskContent .center .pay-item {
  line-height: 60px;
  padding: 0 20rpx;
  background-color: #fff;
}

.maskContent .center .pay-item:active {
  background-color: #f1f1f1;
}

.maskContent .center .pay-item icon {
  float: right;
  font-size: 20px;
}

.maskContent .center .pay-item .wx {
  width: 44rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.maskContent .center .pay-item .account {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}

.maskContent .center .result-view{
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content:center;
}
.maskContent .center .result-view image{
  width:150rpx;
  height: 150rpx;
  margin: 20rpx auto;
}
.maskContent .center .result-view view{
  line-height: 60rpx;
}

.maskContent .center .btn-view{
  display: flex;
  padding:40rpx 20rpx 10rpx;
  flex-direction: row;
  justify-content: space-around;
} 
.maskContent .center .sub-right-btn {
  width: 230rpx;
  background-color: #3696ed !important;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 13px;
}

.maskContent .center .sub-left-btn {
  width: 230rpx;
  color: #3696ed;
  border: 1px solid #3696ed;
  background-color: #fff !important;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 13px;
}

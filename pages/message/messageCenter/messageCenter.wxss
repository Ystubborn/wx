page {
  background-color: #f1f1f1;
}

.top-content {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 200rpx;
  padding: 20rpx 0 0;
}

.top-content .top-item {
  width: 33%;
  text-align: center;
  padding: 20rpx;
}

.top-content .top-item image {
  width: 88rpx;
  height: 88rpx;
} 
.fun-content{
  margin-top: 25rpx;
  display: flex;
  flex-direction: column;
}

.fun-content .fun-item{
   height: 80rpx;
   padding: 20rpx;
   display: flex;
   flex-direction: row;
   justify-content: space-around;
   background-color: #FFF;
   margin-bottom: 2rpx;
}
.fun-content .fun-item .item1 {
  width: 10%;
  line-height: 80rpx;
}
.fun-content .fun-item .item1  image{
  width:25px;
  height:25px;
  margin: 10rpx 20rpx;
}
.fun-content .fun-item .item2{
  font-size: 16px;
  width:60%; 
  line-height: 80rpx;
}

.fun-content .fun-item .item3{
  width:20%; 
  line-height: 80rpx;
  text-align: right;
  font-size: 20px;
}
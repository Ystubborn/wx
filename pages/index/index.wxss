/**index.wxss**/

.home-wrap {
  background: #f1f1f1;
}

.swiper {
  height: 420rpx;
}

.banner {
  width: 100%;
  height: 420rpx;
}

.scroll-txt {
  text-align: center;
  background: #fff;
  margin: 10rpx 0;
  padding: 10rpx 0 15rpx 0;
  color: #333;
}

.scroll-ads {
  text-align: center;
  font-size: 20rpx;
}

.ads-list {
  display: flex;
  flex-direction: row;
  flex: 1;
}

.ads-item {
  flex: 1;
}

.sub-banner {
  width: 100%;
  height: 120rpx;
}

.workbench {
  font-size: 20rpx;
  color: #333;
  background: #fff;
  margin-bottom: 25rpx;
  margin-top: 25rpx;
}

.workbench .title {
  font-size: 16px;
  font-weight: bold;
  padding: 20rpx 20rpx 10rpx;
  display: block;
}

.workbench .list {
  width: 100%;
  padding-bottom: 15rpx;
}

.workbench  .list .items {
  width: 45%;
  height: 180rpx;
  text-align: center;
  display: inline-block;
  margin-left: 3%;
  margin-top: 20rpx;
  position: relative;
}

.workbench  .list .items image {
  height: 100%;
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
}

.workbench  .list  .items .content {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0px;
  top: 0px;
  vertical-align: middle;
  color: #fff;
  font-size: 16px;
  padding: 30rpx 0 0;
}

.workbench  .list .items .content .val {
  font-size: 20px;
}

.workbench .list2 {
  width: 100%;
  padding-bottom: 40rpx;
}

.workbench  .list2 .items {
  width: 45%;
  height: 98rpx;
  text-align: center;
  display: inline-block;
  margin-left: 3%;
  margin-top: 20rpx;
}

.workbench  .list2 .items image {
  width: 95rpx;
  height: 95rpx;
  float: left;
}

.workbench  .list2  .items .content {
  color: #999;
  font-size: 12px;
  padding: 0 10rpx;
  float: left;
  text-align: left;
  line-height: 15px;
}

.workbench  .list2 .items .content .tip {
  color: #333;
  font-size: 15px;
  line-height: 22px;
  font-weight: bold;
  margin-top: -5px;
}

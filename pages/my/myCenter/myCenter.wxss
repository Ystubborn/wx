.top-content {
  position: relative;
  height: 460rpx;
} 

.top-content image {
  height: 100%;
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
}

.center-content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: absolute;
  width: 100%;
  height: 30%;
  left: 0px;
  top: 35%;
}

.center-content .header {
  width: 25%;
  text-align: center;
  display: flex;
  justify-content: center;
}

.center-content .header image {
  width: 140rpx;
  height: 140rpx;
  margin:0 20rpx;
  border-radius: 50%;
}

.center-content .person {
  color: #fff;
  text-align: left;
  width: 65%; 
  padding-top: 20rpx;
}
.center-content .person .name {
  font-size: 18px; 
}

.center-content .person .desc {
  font-size: 15px;
  color: rgba(255,255,255,1);
}

.center-content .pull-right {
  float: right;
  color: #fff;
  width: 10%;
  margin-top: 30rpx;
  font-size: 23px;
}

.bottom-content{ 
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: absolute;
  width: 100%;
  height: 30%;
  left: 0px;
  top: 70%;
}

.bottom-content .content-item{ 
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #FFF;
}


.bottom-content .content-item text{ 
  width: 100%;
  text-align: center;
  font-size: 14px;
}

.fun-content{
  margin-top: 25rpx;
  display: flex;
  flex-direction: column;
}

.fun-content .fun-item{
   height: 80rpx;
   padding: 20rpx;
   display: flex;
   flex-direction: row;
   justify-content: space-around;
   background-color: #FFF;
   margin-bottom: 2rpx;
}
.fun-content .fun-item .item1 {
  width: 15%;
  line-height: 80rpx;
}
.fun-content .fun-item .item1  image{
  width:30px;
  height:30px;
  margin: 10rpx 20rpx;
}
.fun-content .fun-item .item2{
  font-size: 16px;
  width:45%; 
  line-height: 80rpx;
}

.fun-content .fun-item .item3{
  width:32%; 
  line-height: 80rpx;
}
.fun-content .fun-item .item3 button{ 
  background-color: #ED7612;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 15px;
  width: 85px; 
  float: left;
}
.fun-content .fun-item .item3 icon{ 
  float: right;
  font-size:20px; 
}
 